# Makefile
#
# libcmini/Makefile
#
# azuepke, 2013-05-17: initial
# azuepke, 2014-05-04: moved to root level

TOP = ..

include ../rules.mk
include ../rules-$(FOOBAR_RULESET).mk
include ../kernel/arch/$(ARCH)/$(SUBARCH)-$(FOOBAR_RULESET).mk

# pull in kernel generic lib
vpath %.c .
vpath %.S .

INCLUDES = -nostdinc -I../kernel/include -I../kernel/arch/$(ARCH)/include
CFLAGS += -D__LIBCMINI \
          $(INCLUDES) \
          $(ARCH_USER_CFLAGS)
AFLAGS += $(INCLUDES) \
          $(ARCH_USER_AFLAGS)


# Debug settings
ifeq ("$(DEBUG)", "no")
CFLAGS += -DNDEBUG $(ARCH_CFLAGS_NDEBUG)
AFLAGS += -DNDEBUG
else
CFLAGS += -g $(ARCH_CFLAGS_DEBUG)
AFLAGS +=
endif

# libcmini modules
MODS = printf memcpy memset memcmp strcpy strlen strcmp __strerror assert
OBJS = $(addprefix .,$(addsuffix .o,$(MODS))) .libcmini_buildid.o
DEPS = $(addprefix .,$(addsuffix .d,$(MODS)))

.PHONY: all clean distclean .FORCE

all: libcmini.a

libcmini.a: $(OBJS)
	@echo "  AR    $@"
	$(Q)$(AR) cr $@ $^

# autogenerated files
libcmini_buildid.c: $(filter-out .libcmini_buildid.o, $(OBJS))
	@echo "  GEN   $@"
	$(Q)echo "/* libcmini_buildid.c */" >$@
	$(Q)echo "/* GENERATED BY MAKEFILE -- DO NOT EDIT */" >>$@
	$(Q)echo "const char __libcmini_buildid[] = \"$(BUILDID)\";" >>$@

clean:
	$(Q)rm -f $(OBJS) libcmini_buildid.c libcmini.a

distclean: clean
	$(Q)rm -f $(DEPS)

# pull in dependencies
ifeq ("$(filter $(MAKECMDGOALS), clean distclean)", "")
-include $(DEPS)
endif

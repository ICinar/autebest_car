# Makefile
#
# libapex/Makefile
#
# azuepke, 2014-09-04: initial

TOP = ..

include ../rules.mk
include ../rules-$(FOOBAR_RULESET).mk
include ../kernel/arch/$(ARCH)/$(SUBARCH)-$(FOOBAR_RULESET).mk

vpath %.c .
vpath %.S .

INCLUDES = -nostdinc -I../kernel/include -I../kernel/arch/$(ARCH)/include -Iinclude
CFLAGS += -D__LIBAPEX \
          $(INCLUDES) \
          $(ARCH_USER_CFLAGS)
AFLAGS += $(INCLUDES) \
          $(ARCH_USER_AFLAGS)


# Debug settings
ifeq ("$(DEBUG)", "no")
CFLAGS += -DNDEBUG $(ARCH_CFLAGS_NDEBUG)
AFLAGS += -DNDEBUG
else
CFLAGS += -g $(ARCH_CFLAGS_DEBUG)
AFLAGS +=
endif

# libapex modules

ifeq ($(VLE),yes)
MODS = crt0_$(ARCH)_vle
else
MODS = crt0_$(ARCH)
endif

MODS += apex blackboard buffer error event part process qport sem sport time
OBJS = $(addprefix .,$(addsuffix .o,$(MODS))) .libapex_buildid.o
DEPS = $(addprefix .,$(addsuffix .d,$(MODS)))

.PHONY: all clean distclean .FORCE

all: libapex.a

libapex.a: $(OBJS)
	@echo "  AR    $@"
	$(Q)$(AR) cr $@ $^

# autogenerated files
libapex_buildid.c: $(filter-out .libapex_buildid.o, $(OBJS))
	@echo "  GEN   $@"
	$(Q)echo "/* libapex_buildid.c */" >$@
	$(Q)echo "/* GENERATED BY MAKEFILE -- DO NOT EDIT */" >>$@
	$(Q)echo "const char __libapex_buildid[] = \"$(BUILDID)\";" >>$@

clean:
	$(Q)rm -f $(OBJS) libapex_buildid.c libapex.a

distclean: clean
	$(Q)rm -f $(DEPS)

# pull in dependencies
ifeq ("$(filter $(MAKECMDGOALS), clean distclean)", "")
-include $(DEPS)
endif

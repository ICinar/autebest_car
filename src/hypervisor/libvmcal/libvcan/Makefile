
TOP = ../..

include $(TOP)/rules.mk
include $(TOP)/rules-$(FOOBAR_RULESET).mk
include $(TOP)/kernel/arch/$(ARCH)/$(SUBARCH)-$(FOOBAR_RULESET).mk


INCLUDES  = -nostdinc
INCLUDES += -I$(TOP)/kernel/include
INCLUDES += -I$(TOP)/kernel/arch/$(ARCH)/include
INCLUDES += -I$(TOP)/autosar/Common
INCLUDES += -Iinclude
INCLUDES += -I$(TOP)/libvmcal/libvcanif/include
INCLUDES += -I$(TOP)/libvmcal/common/include

CFLAGS += -D__LIBVMCAL
CFLAGS += -D__LIBVCAN
CFLAGS += -DUSE_KLDD
CFLAGS += $(INCLUDES)
CFLAGS += $(ARCH_USER_CFLAGS)

AFLAGS += $(INCLUDES)
AFLAGS += $(ARCH_USER_AFLAGS)


# Debug settings
ifeq ("$(DEBUG)", "no")
CFLAGS += -DNDEBUG $(ARCH_CFLAGS_NDEBUG)
AFLAGS += -DNDEBUG
else
CFLAGS += -g $(ARCH_CFLAGS_DEBUG)
AFLAGS +=
endif

MODS += vCan

OBJS = $(addprefix .,$(addsuffix .o,$(MODS))) .libvcan_buildid.o
DEPS = $(addprefix .,$(addsuffix .d,$(MODS)))

.PHONY: all clean distclean .FORCE

all: libvcan.a

libvcan.a: $(OBJS)
	@echo "  AR    $@"
	$(Q)$(AR) cr $@ $^

# autogenerated files
libvcan_buildid.c: $(filter-out .libvcan_buildid.o, $(OBJS))
	@echo "  GEN   $@"
	$(Q)echo "/* libvcan_buildid.c */" >$@
	$(Q)echo "/* GENERATED BY MAKEFILE -- DO NOT EDIT */" >>$@
	$(Q)echo "const char __libvmcal_buildid[] = \"$(BUILDID)\";" >>$@

clean:
	$(Q)rm -f $(OBJS) libvcan_buildid.c libvcan.a

distclean: clean
	$(Q)rm -f $(DEPS)

# pull in dependencies
ifeq ("$(filter $(MAKECMDGOALS), clean distclean)", "")
-include $(DEPS)
endif

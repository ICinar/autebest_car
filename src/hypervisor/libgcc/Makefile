# Makefile
#
# libgcc/Makefile
#
# azuepke, 2015-03-27: initial

TOP = ..

include ../rules.mk
include ../rules-$(FOOBAR_RULESET).mk
include ../kernel/arch/$(ARCH)/$(SUBARCH)-$(FOOBAR_RULESET).mk

vpath %.c .
vpath %.S .

INCLUDES = -nostdinc -I../kernel/include -I../kernel/arch/$(ARCH)/include
CFLAGS += -W -Wall -Wshadow -Wpointer-arith -Wcast-qual \
          -Wmissing-prototypes -Wstrict-prototypes \
          -fno-strict-aliasing \
          -fno-common \
          -Werror \
          $(INCLUDES) \
          $(ARCH_USER_CFLAGS)
AFLAGS += $(INCLUDES) \
          $(ARCH_USER_AFLAGS)


# Debug settings
ifeq ("$(DEBUG)", "no")
CFLAGS += -DNDEBUG $(ARCH_CFLAGS_NDEBUG)
AFLAGS += -DNDEBUG
else
CFLAGS += -g $(ARCH_CFLAGS_DEBUG)
AFLAGS +=
endif

# libgcc modules
MODS = $(patsubst %.S,%,$(wildcard $(ARCH)_*.S))
OBJS = $(addprefix .,$(addsuffix .o,$(MODS))) .libgcc_buildid.o
DEPS = $(addprefix .,$(addsuffix .d,$(MODS)))

.PHONY: all clean distclean .FORCE

all: libgcc.a

libgcc.a: $(OBJS)
	@echo "  AR    $@"
	$(Q)$(AR) cr $@ $^

# autogenerated files
libgcc_buildid.c: $(filter-out .libgcc_buildid.o, $(OBJS))
	@echo "  GEN   $@"
	$(Q)echo "/* libgcc_buildid.c */" >$@
	$(Q)echo "/* GENERATED BY MAKEFILE -- DO NOT EDIT */" >>$@
	$(Q)echo "const char __libgcc_buildid[] = \"$(BUILDID)\";" >>$@

clean:
	$(Q)rm -f $(OBJS) libgcc_buildid.c libgcc.a

distclean: clean
	$(Q)rm -f $(DEPS)

# pull in dependencies
ifeq ("$(filter $(MAKECMDGOALS), clean distclean)", "")
-include $(DEPS)
endif

# Makefile
#
# libsys/Makefile
#
# azuepke, 2013-05-17: initial
# azuepke, 2014-05-04: moved to root level

TOP = ..

include ../rules.mk
include ../rules-$(FOOBAR_RULESET).mk
include ../kernel/arch/$(ARCH)/$(SUBARCH)-$(FOOBAR_RULESET).mk

vpath %.c .
vpath %.S .

INCLUDES = -nostdinc -I../kernel/include -I../kernel/arch/$(ARCH)/include
CFLAGS += -D__LIBSYS \
          $(INCLUDES) \
          $(ARCH_USER_CFLAGS)
AFLAGS += $(INCLUDES) \
          $(ARCH_USER_AFLAGS)


# Debug settings
ifeq ("$(DEBUG)", "no")
CFLAGS += -DNDEBUG $(ARCH_CFLAGS_NDEBUG)
AFLAGS += -DNDEBUG
else
CFLAGS += -g $(ARCH_CFLAGS_DEBUG)
AFLAGS +=
endif

# libsys modules
MODS = $(patsubst %.S,%,$(wildcard sys_*.S __sys_*.S))
MODS += $(patsubst %.c,%,$(wildcard sys_*.c __sys_*.c))
OBJS = $(addprefix .,$(addsuffix .o,$(MODS))) .libsys_buildid.o
DEPS = $(addprefix .,$(addsuffix .d,$(MODS)))

ifeq ($(VLE),yes)
CRT0 = .crt0_$(ARCH)_vle.o
else
CRT0 = .crt0_$(ARCH).o
endif

.PHONY: all clean distclean .FORCE

all: libsys.a $(CRT0)

libsys.a: $(OBJS)
	@echo "  AR    $@"
	$(Q)$(AR) cr $@ $^

# autogenerated files
libsys_buildid.c: $(filter-out .libsys_buildid.o, $(OBJS))
	@echo "  GEN   $@"
	$(Q)echo "/* libsys_buildid.c */" >$@
	$(Q)echo "/* GENERATED BY MAKEFILE -- DO NOT EDIT */" >>$@
	$(Q)echo "const char __libsys_buildid[] = \"$(BUILDID)\";" >>$@

clean:
	$(Q)rm -f $(OBJS) libsys_buildid.c libsys.a $(CRT0)

distclean: clean
	$(Q)rm -f $(DEPS)

# pull in dependencies
ifeq ("$(filter $(MAKECMDGOALS), clean distclean)", "")
-include $(DEPS)
endif
